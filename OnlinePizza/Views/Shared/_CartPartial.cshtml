@model List<CartItem>

@if (Model != null && Model.Count > 0)
{
    <h1>Cart</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <h4>Dish</h4>
                </th>
                <th>
                    <h4>Price</h4>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dish.DishName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price) kr
                    </td>
                    <td>
                        <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.CartItemID"><i class="fa fa-trash-o fa-lg fa-1x" style="color:darkred;"></i> </a> <a>|</a>
                        <a asp-controller="Cart" asp-action="EditCartItem" asp-route-id="@item.CartItemID"><i class="fa fa-pencil fa-1x" style="color:black;" aria-hidden="true"></i></a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <div class="divCartButtons">
        <a asp-controller="Payment" asp-action="Pay" class="cartButtons">Check out</a> <a>|</a>
        <a asp-controller="Cart" asp-action="ClearCart" class="cartButtons"> Clear Cart</a>
    </div>
}